@model SentinelMobile.Models.LeftMenu

@{
    string fleetViewUrl = "#vehicleList";
    string dataajax = "true";
    if(Model != null && Model.RefPage.ToLower() != "vehiclelist" && Model.RefPage.ToLower() != "mappage")
    {
        fleetViewUrl = Url.Content("~/Home/FleetView#vehicleList");
        dataajax = "false";
    }   
}

<div data-position="inline" data-theme="a" data-role="header">
    <h1>Sentinelfm</h1>
</div>
<div data-role="content" data-theme="f">
    <ul data-role="listview" data-filter="false">
        @{
            SentinelMobile.Models.User user = Session != null ? (SentinelMobile.Models.User)Session["SentinelUser"] : null;
            if(user != null && user.IsSuperUser)
            {
                <li data-icon="false"><a href="~/Account/SuperOrganizationMenu" data-ajax="false"><img src="~/content/images/icons/Conference32white.png" width="32" height="32" style="max-height:24px;max-width:24px;top:0.6em;" class ="ui-li-icon ui-corner-none" />Organizations</a></li>
            }
        }
        @{if (!user.IsDriver){ 
            <li  data-icon="false"><a style="color:white;"  href="@fleetViewUrl" data-ajax="@dataajax"       
                @if(Model == null || Model.RefPage.ToLower() == "vehiclelist") { <text>data-rel="close"</text> }>
                <img src="~/content/images/icons/pickup32white.png" width="32" height="32" style="max-height:24px;max-width:24px;top:0.6em;" class ="ui-li-icon ui-corner-none" />           
                @SentinelMobile.Resources.Resources.FleetView</a>

            </li>
             if (user.HosEnabled)  {
               <li data-icon="false"><a href="~/HOS/DriverList" data-ajax="false" style="color:white;"><img src="~/content/images/icons/Conference32white.png" width="32" height="32" style="max-height:24px;max-width:24px;top:0.6em;" class ="ui-li-icon ui-corner-none" />@SentinelMobile.Resources.HOSResources.Driver</a></li>
             }
            
          }
          else
          {
             <Text >
                 <script text ="Javascript" >
                     function DriverView() {
                         var url = "@Html.Raw(Url.Action("DriverView", "HOS", new { driverId = user.UserId, driverName = user.UserName }))";
                         window.location = url;
                         //$.mobile.changePage(url);
                         //DriverViewReady();

                     }

                 </script>
             </Text>
             <li data-icon="false"><a href="#" onclick="DriverView()" data-ajax="false" style="color:white;"><img src="~/content/images/icons/Conference32white.png" width="32" height="32" style="max-height:24px;max-width:24px;top:0.6em;" class ="ui-li-icon ui-corner-none" />@SentinelMobile.Resources.HOSResources.Logsheets</a></li>
          }
        }        
        <li data-icon="false"><a href="~/Home/About" data-ajax="false" style="color:white;"><img src="~/content/images/icons/about32white.png" width="32" height="32" style="max-height:24px;max-width:24px;top:0.6em;" class ="ui-li-icon ui-corner-none" />@SentinelMobile.Resources.Resources.About</a></li>
        <li data-icon="false"><a href="~/Account/Logoff" data-ajax="false" style="color:white;"><img src="~/content/images/icons/logout32white.png" width="32" height="32" style="max-height:24px;max-width:24px;top:0.6em;" class ="ui-li-icon ui-corner-none" />@SentinelMobile.Resources.Resources.Logout</a></li>
    </ul>
</div>