@{
    Layout = "";    
}
@if (ViewBag.Fleets != null)
{
    for (int i = (ViewBag.pageIndex - 1) * 20; i < ViewBag.Fleets.Count && i < ViewBag.pageIndex * 20; i++)
    {
        SentinelMobile.Models.Fleet fleet = ViewBag.Fleets[i];
        <li>
            <div class="singleCheckBoxLeft @if (ViewBag.FleetId == fleet.FleetId)
                                            { @("checkBoxLeftChecked") }
                                            else
                                            { @("checkBoxLeftNotChecked") } " onclick="loadVehicleByFleet( @fleet.FleetId, 1, true);changeVehicleListTitle($(this).parent().find('a'));">
                <input type="checkbox" name="fleetcheckbox-@i" id="fleetcheckbox-@i" class="hidden-checkbox" @if (ViewBag.FleetId == fleet.FleetId)
                                                                                                                { @Html.Raw("checked=\"checked\"") }  />
            </div>
            <a href="javascript:void(0)" onclick="markFleetChecked(this);loadVehicleByFleet( @fleet.FleetId, 1, true);changeVehicleListTitle(this);" class="detailListText">
                <h2>@fleet.Name</h2>

                @if(ViewBag.FleetType == "hierarchy")
                {
                    <p>@fleet.Path</p>
                }
            </a>
            
        </li>
    }
}   
else
{
    <li>No fleets</li>
}